{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": false,
        "strict": false,
        "removeComments": true,
        "strictNullChecks": false,
        "noImplicitThis": false,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "src/func/**/*",
        "src/renderer/**/*",
        "src/interfaces/**/*",
        "src/components/**/*",
        "src/config/**/*"
    ]
}